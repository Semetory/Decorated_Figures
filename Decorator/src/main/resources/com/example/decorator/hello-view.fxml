<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Button?>

<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.decorator.HelloController"
      spacing="10"
      style="-fx-padding: 20;">

    <HBox spacing="20">
        <VBox spacing="10">
            <Label text="Выберите украшения:" style="-fx-font-weight: bold;"/>
            <CheckBox fx:id="garlandCheck" text="Гирлянда" onAction="#handleCheckboxChange"/>
            <CheckBox fx:id="starCheck" text="Звезда" onAction="#handleCheckboxChange"/>
            <CheckBox fx:id="toysCheck" text="Игрушки" onAction="#handleCheckboxChange"/>
            <CheckBox fx:id="presentsCheck" text="Подарки" onAction="#handleCheckboxChange"/>

            <HBox spacing="10">
                <Button text="Добавить всё" onAction="#addAllDecorations"/>
                <Button text="Удалить всё" onAction="#removeAllDecorations"/>
            </HBox>
        </VBox>

        <VBox spacing="10">
            <Pane fx:id="paintPane" style="-fx-background-color: white; -fx-border-color: #ccc;"
                  prefWidth="1024" prefHeight="600"/>
            <Label fx:id="statusLabel" style="-fx-font-size: 14; -fx-text-fill: #333;"/>
        </VBox>
    </HBox>

</VBox>
