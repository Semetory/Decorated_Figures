<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.canvas.*?>
<?import javafx.scene.text.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.Button?>

<?import javafx.scene.paint.Color?>
<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.prototype.HelloController"
            prefHeight="600" prefWidth="800">

    <top>
        <FlowPane alignment="CENTER_LEFT" hgap="10" vgap="10"
                  style="-fx-background-color: #f0f0f0; -fx-padding: 10;">

            <!-- Блок выбора фигуры -->
            <VBox spacing="5">
                <Label text="Фигура:"/>
                <ListView fx:id="listView" prefWidth="150" prefHeight="100"/>
            </VBox>

            <!-- Блок цвета заливки -->
            <VBox spacing="5">
                <Label text="Цвет заливки:"/>
                <ColorPicker fx:id="colorPicker">
                </ColorPicker>
            </VBox>

            <!-- Блок контура -->
            <VBox spacing="5">
                <Label text="Контур:"/>
                <HBox spacing="5">
                    <VBox spacing="2">
                        <Label text="Толщина:"/>
                        <Slider fx:id="strokeSlider" min="1" max="10" value="1"
                                prefWidth="80" showTickLabels="true"/>
                    </VBox>
                    <VBox spacing="2">
                        <Label text="Цвет:"/>
                        <ColorPicker fx:id="strokeColorPicker">
                        </ColorPicker>
                    </VBox>
                </HBox>
            </VBox>

            <!-- Блок тени -->
            <VBox spacing="5">
                <Label text="Тень:"/>
                <Button fx:id="shadowButton" text="Вкл. тень"
                        onAction="#toggleShadow" prefWidth="80"/>

                <HBox spacing="5">
                    <VBox spacing="2">
                        <Label text="Радиус:"/>
                        <Slider fx:id="shadowRadiusSlider" prefWidth="80"
                                min="0" max="30" value="10"/>
                    </VBox>
                    <VBox spacing="2">
                        <Label text="Цвет:"/>
                        <ColorPicker fx:id="shadowColorPicker">
                        </ColorPicker>
                    </VBox>
                </HBox>

                <HBox spacing="5">
                    <VBox spacing="2">
                        <Label text="Смещение X:"/>
                        <Slider fx:id="shadowOffsetXSlider" prefWidth="80"
                                min="-20" max="20" value="5"/>
                    </VBox>
                    <VBox spacing="2">
                        <Label text="Смещение Y:"/>
                        <Slider fx:id="shadowOffsetYSlider" prefWidth="80"
                                min="-20" max="20" value="5"/>
                    </VBox>
                </HBox>
            </VBox>

            <!-- Блок управления -->
            <VBox spacing="5">
                <Label text="Управление:"/>
                <Button text="Очистить" onAction="#clearCanvas" prefWidth="80"/>
                <Button text="Эффект" onAction="#addEffect" prefWidth="80"/>
            </VBox>

            <!-- Информация -->
            <VBox spacing="5">
                <Label fx:id="shapeNameLabel" text="Фигура: не выбрана"
                       style="-fx-font-weight: bold;"/>
                <Label text="Кликните на холст для рисования"/>
            </VBox>

        </FlowPane>
    </top>

    <center>
        <Canvas fx:id="canvas" onMouseClicked="#drawShape"
                height="550" width="900"
                style="-fx-background-color: white; -fx-border-color: #ccc; -fx-border-width: 1;"/>
    </center>

</BorderPane>