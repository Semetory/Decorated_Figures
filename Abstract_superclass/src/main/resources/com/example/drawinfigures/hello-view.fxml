<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.canvas.Canvas?>

<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.control.ColorPicker?>
<?import javafx.scene.control.Slider?>
<?import javafx.scene.layout.StackPane?>

<BorderPane xmlns="http://javafx.com/javafx/21.0.0"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.drawinfigures.HelloController">

    <top>
        <HBox spacing="10" alignment="CENTER">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>
            <Button fx:id="saveButton" onAction="#saveCanvas" text="Сохранить" />
            <Label text="Цвет:"/>
            <ColorPicker fx:id="cPicker" />
            <Label text="Толщина:"/>
            <Slider fx:id="thicknessSlider" min="1" max="80" value="2" showTickMarks="true"
                    showTickLabels="true" majorTickUnit="1" prefWidth="480"/>
        </HBox>
    </top>

    <center>
        <StackPane style="-fx-background-color: white;">
            <Canvas fx:id="canvas" width="1024.0" height="600.0"/>
        </StackPane>
    </center>

    <bottom>
        <HBox alignment="CENTER" spacing="20">
            <padding> <Insets top="10" bottom="10"/> </padding>
            <Button fx:id="b_pen" text="Ручка" onAction="#onPen" />
            <Button fx:id="b_eraser" text="Стиральная резинка" onAction="#onEraser" />
            <Button fx:id="b_circle" text="Круг" onAction="#onCircleClick" />
            <Button fx:id="b_ellipse" text="Элипс" onAction="#onEllipseClick" />
            <Button fx:id="b_rectangle" text="Прямоугольник" onAction="#onRectangleClick" />
            <Button fx:id="b_rounded_rectangle" text="Скругленный прямоугольник" onAction="#onRoundedRectangleClick" />
            <Button fx:id="b_square" text="Квадрат" onAction="#onCSquareClick" />
            <Button fx:id="b_lines" text="Линия" onAction="#onLine" />
            <Button fx:id="b_polygone" text="Некий-Полигон" onAction="#onPolygon" />
        </HBox>
    </bottom>
</BorderPane>
